package triangle;

import java.net.URI;

import org.apache.hadoop.fs.Path;

public class Driver {

	public static void main(String[] args) throws Exception {
		URI dsin = new Path(args[0]).toUri();
		URI dsout = new Path("degree_sort.txt").toUri();
		String[] forDS = { dsin.toString(), dsout.toString() };
		DegreeSort.main(forDS);
		String[] forGB = { args[0], args[1] + "/GraphSchema" };
		GraphBuilder.main(forGB);
		String[] forTS = { args[1] + "/GraphSchema", args[1] + "/TriangleNum" };
		TriangleSearch.main(forTS);
	}
}
